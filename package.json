{
  "name": "bill-unattended-test",
  "version": "0.0.1",
  "description": "bill-unattended-test written in React.js",
  "main": "",
  "scripts": {
    "test": "jest",
    "browserify": "mkdir -p ./dist && browserify src/index.jsx -o dist/bundle.js -t [ babelify --presets [ es2015 react ] ]",
    "copy:dist": "cp src/*.html dist/",
    "copy": "npm run copy:dist",
    "bundle": "npm run bundle:styles & npm run bundle:scripts & npm run bundle:static",
    "postcss": "postcss --use postcss-import --use postcss-cssnext ./src/styles/index.post.css -o ./dist/styles.css",
    "stylelint": "stylelint src/styles/*.css &",
    "bundle:styles": "nodemon -e css -w ./src/styles -x 'npm run stylelint; npm run postcss'",
    "bundle:scripts": "nodemon -e js,jsx -w ./src -x 'npm run browserify && npm run compress && npm test & '",
    "compress": "npm run bundle:minify && npm run bundle:gzip",
    "bundle:minify": "uglifyjs --mangle -o dist/bundle-min.js -- dist/bundle.js",
    "bundle:gzip": "gzip -kf dist/bundle-min.js",
    "bundle:static": "nodemon -e html -w ./src -x ' npm run copy && npm test & '",
    "start": "http-server dist/"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/src/app/lib"
    ]
  },
  "author": "Szilveszter Szilagyi",
  "license": "TBD",
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-jest": "^12.0.2",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-istanbul": "^2.0.0",
    "flux": "^2.1.1",
    "http-server": "^0.9.0",
    "jest-cli": "^12.0.2",
    "keymirror": "^0.1.1",
    "nodemon": "^1.9.2",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "react": "^15.0.2",
    "react-addons-css-transition-group": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-router": "^2.4.0",
    "react-router-scroll": "^0.2.0",
    "stylelint": "^6.3.3",
    "stylelint-config-standard": "^7.0.0",
    "uglify-js": "^2.6.2",
    "watch": "^0.18.0"
  },
  "dependencies": {}
}
